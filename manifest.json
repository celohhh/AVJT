{
  "name":							"Assistente Virtual da Justiça do Trabalho",
	"short_name":				"AVJT",
	"description":			"Otimiza as rotinas de tarefas inerentes aos sistemas da Justiça do Trabalho",
	"manifest_version":	2,
	"version":					"64.7",
	"author":						"Sisenando Calixto",
	"homepage_url":			"https://github.com/SisenandoCalixto/avjt/",

	"applications":{
		"gecko":{
			"id":						"{fcaf8e22-fd89-4a3f-99a0-c49fff1c4ac4}"
		}
	},

	"developer":{
		"name":						"Sisenando Gomes Calixto de Sousa",
		"url":						"https://github.com/SisenandoCalixto/"
	},

  "icons":{
    "16":		"imagens/icones/extensao/colorido.svg",
    "24":		"imagens/icones/extensao/colorido.svg",
    "32":		"imagens/icones/extensao/colorido.svg",
    "48":		"imagens/icones/extensao/colorido.svg",
    "128":	"imagens/icones/extensao/colorido.svg"
  },

  "background":{
    "scripts":[
      "publicas/definicoes.js",
      "publicas/gerais.js",
      "publicas/dom.js",
      "publicas/esforcos.js",
      "publicas/navegador.js",
      "publicas/whatsapp.js",
      "navegador/navegador.js",
      "navegador/sandbox.js"
    ]
  },

  "content_scripts":[
    {
      "matches":[
        "<all_urls>"
      ],
      "css":[
        "css/animacoes.css",
        "css/cores.css",
        "css/selecao.css",
        "css/icones.css",
        "css/pje.css"
      ],
      "js":[
        "publicas/definicoes.js",
        "publicas/gerais.js",
        "publicas/dom.js",
        "publicas/esforcos.js",
        "publicas/extenso.js",
        "publicas/navegador.js",
        "publicas/pje.js",
        "publicas/whatsapp.js",
        "iniciar.js",
        "selecao.js",
        "pje.js"
      ],
      "all_frames":					true,
      "match_about_blank":	true,
      "run_at":							"document_end"
    }
  ],

  "permissions":[
    "<all_urls>",
    "activeTab",
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "storage",
    "tabs",
    "unlimitedStorage"
  ],

  "options_ui":{
		"page": "navegador/configuracoes/configuracoes.htm",
		"open_in_tab": false
	},

  "browser_action":{
    "browser_style":	true,
    "default_popup": 	"navegador/menu/menu.htm"
  },

  "user_scripts": {
    "api_script": "sandbox.js"
  }
}